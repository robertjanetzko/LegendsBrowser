#set($title=$wc.name) #decorate("layout.vm")

<div class="pull-right">
	<div id="map" style="width: 300px; height: 300px"></div>
	#parse("map.vm") 
</div>
<script>
		$(function() {
			#foreach($site in $wc.sites)
				addSite('$site.mapDescription', $site.x1, $site.y1, $site.x2, $site.y2, '#FF0', '$site.glyph');
			#end
			
			#if($wc.master)
				var latlngs = [
					   			#foreach($c in $wc.master.coords)
					   			coord($c.x + 0.5,$c.y - 0.5)#if( $foreach.hasNext ),#end
					   			#end];
					   			
					   			var polyline = L.polyline(latlngs, {color: 'red', opacity: 1, weight: 6}).addTo(map);
					   			attachTooltip(polyline, '$wc.master.mapDescription');
			#end
			#if($wc.coords.size()==1)
				#set($c=$wc.coords[0])
				addWc('$wc.mapDescription', $c.x, $c.y, '#FFF');
			#else
				var latlngs = [
			   			#foreach($c in $wc.coords)
			   			coord($c.x + 0.5,$c.y - 0.5)#if( $foreach.hasNext ),#end
			   			#end];
			   			
			   			var polyline = L.polyline(latlngs, {color: 'red', opacity: 1, weight: 6}).addTo(map);
			   			attachTooltip(polyline, '$wc.mapDescription');
			#end
			
			#foreach($w in $wc.parts)
				#set($c=$w.coords[0])
				addWc('$w.mapDescription', $c.x, $c.y, '#FFF');
			#end
			
			zoom();
		});
	</script>

<h3>$wc.name</h3>
$wc.type

<div class="row">
#if($wc.sites.size()>0)
	<div class="col-md-8">
		<table class="table">
			<tr>
				<th>Site</th>
				<th>History</th>
			</tr>
			#foreach( $site in $wc.sites )
			<tr>
				<td nowrap>$site.link</td>
				<td>$site.history</td>
			</tr>
			#end
		</table>
	</div>
#end

#if($wc.parts.size()>0)
	<div class="col-md-8">
		<table class="table">
			<tr>
				<th>Part</th>
				<th>Type</th>
			</tr>
			#foreach( $w in $wc.parts )
			<tr>
				<td>$w.link</td>
				<td>$w.type</td>
			</tr>
			#end
		</table>
	</div>
#end
</div>
#parse("events.vm") #end
